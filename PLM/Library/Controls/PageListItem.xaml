<UserControl x:Class="PLM.Library.Controls.PageListItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PLM.Library.Controls" xmlns:common="clr-namespace:PLM.Common"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" DataContextChanged="UserControl_DataContextChanged">
    <Grid Margin="20,16,20,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="15"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1.5*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="1.3*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="80"/>
        </Grid.ColumnDefinitions>
        <TextBlock  Grid.Column="1" VerticalAlignment="Center" Text="{Binding Id}" FontSize="10" Foreground="#FF323233" TextWrapping="Wrap" TextTrimming="CharacterEllipsis" HorizontalAlignment="Left"/>
        <StackPanel Grid.Column="2" VerticalAlignment="Center" Orientation="Horizontal" HorizontalAlignment="Left">
            <Image Width="50" Source="{Binding Image}" HorizontalAlignment="Left"/>
            <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                <TextBlock Text="{Binding ImageInfomation}" FontSize="10" Foreground="#FF323233"  HorizontalAlignment="Left" TextWrapping="Wrap" TextTrimming="CharacterEllipsis"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <TextBlock Text="关联id:" FontSize="9" TextWrapping="Wrap" TextTrimming="CharacterEllipsis" Foreground="#FF0377CE"/>
                    <TextBlock Text="{Binding AssociationId}" TextWrapping="Wrap" TextTrimming="CharacterEllipsis" FontSize="10" Foreground="#FF0377CE" />
                </StackPanel>
            </StackPanel>
        </StackPanel>
        <TextBlock Grid.Column="3" Text="{Binding PageInfomation}" FontSize="10" Foreground="#FF323233" TextWrapping="Wrap" TextTrimming="CharacterEllipsis" VerticalAlignment="Center" HorizontalAlignment="Left"/>
        <TextBlock Grid.Column="4" Text="{Binding Remarksinfomation}" FontSize="10" Foreground="#FF323233" TextWrapping="Wrap" TextTrimming="CharacterEllipsis" VerticalAlignment="Center" HorizontalAlignment="Left"/>
        <TextBlock Grid.Column="5" Text="{Binding UploadDate}" FontSize="10" Foreground="#FF323233" TextWrapping="Wrap" TextTrimming="CharacterEllipsis" VerticalAlignment="Center" HorizontalAlignment="Left"/>
        <TextBlock Grid.Column="6" Text="{Binding Uploader}" FontSize="10" Foreground="#FF323233" TextWrapping="Wrap" TextTrimming="CharacterEllipsis" VerticalAlignment="Center" HorizontalAlignment="Left"/>
        <StackPanel Grid.Column="7" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
            <Image x:Name="imgDownload" Height="22" Source="/Library/Image/xiazai-2备份 2@2x.png" common:PointerEventHelper.PointerUp="ImgDownload_PointerUp" />
            <Image x:Name="ImgDelete" Height="22" Source="/Library/Image/delete@2x.png" common:PointerEventHelper.PointerDown="ImgDelete_PointerDown"/>
        </StackPanel>

    </Grid>
</UserControl>

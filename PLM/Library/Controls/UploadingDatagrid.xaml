<UserControl x:Class="PLM.Library.Controls.UploadingDatagrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PLM.Library.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DataGrid Grid.Row="1"  ColumnHeaderStyle="{StaticResource PageListsPageDataGridColumnHeader}"  Background="Transparent"  IsReadOnly="True" Margin="20,0,20,90">
            <DataGrid.Columns>
                <DataGridTextColumn Header="{DynamicResource fileName}"  Binding="{Binding deviceNum}"  Width="*" >
                </DataGridTextColumn>

                <DataGridTextColumn Header="{DynamicResource Layoutinformation}"  Width="*" />

                <DataGridTextColumn Header="{DynamicResource size}"   Width="*" />

                <DataGridTemplateColumn Header="{DynamicResource status}" Width="*" >

                </DataGridTemplateColumn>

                <DataGridTextColumn Header="{DynamicResource operation}" Width="*">

                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>

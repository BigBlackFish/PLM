<UserControl x:Class="PLM.Library.Controls.FileaddRight"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PLM.Library.Controls"
             xmlns:common="clr-namespace:PLM.Common"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid x:Name="griDrag" Background="#FFFFFFFF" AllowDrop="True" Drop="GriDrag_Drop" DragEnter="GriDrag_DragEnter">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image x:Name="imgAdd" Width="200" Height="100" Style="{StaticResource AddImageright}"  common:PointerEventHelper.PointerDown="ImgAdd_PointerDown"/>
            <TextBlock HorizontalAlignment="Center" Margin="0,10,0,0" FontSize="12" Foreground="#FF323233" Text="{DynamicResource Clickordragtoaddsourcefile}"/>
            <TextBlock HorizontalAlignment="Center" Margin="0,5,0,0" FontSize="11" Foreground="#FF969699" Text="{DynamicResource Thesupportedformatsare.jpg、.png}"/>
        </StackPanel>

    </Grid>
</UserControl>
